doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    style(type='text/css').
      body{
        background:url('http://drive.google.com/uc?export=view&id=1t2bpqsI_gzb_uD0rgVZVBSTHIfP6xFKu');
      }
      #maindiv{
        color:gray;
        padding-top:20px;
      }
      #char1{
        position:fixed;
        bottom:40px;
        left:30px;
        height:150px;
      }
      #char2{
        position:fixed;
        bottom:60px;
        right:50px;
        height:250px;
        animation:fuwafuwa 3s infinite linear alternate;
      }
      @keyframes fuwafuwa {
      0% {transform:translate(0, 0) rotate(-5deg);}
      50% {transform:translate(0, -5px) rotate(0deg);}
      100% {transform:translate(0, 0)rotate(5deg);}
      }
      button{
        background: none;
        border-top: none;
        border-left: none;
        border-right: none;
      }

    title アンケート
  body
    main#maindiv
      .container
        h3 #{title}
        h4 【 #{Q} 】アンケート!
        hr
        img#char1(src="http://drive.google.com/uc?export=view&id=15eFZ2kKYvLXESJ09BGAPr7a4f_L0gErM")
        img#char2(src="http://drive.google.com/uc?export=view&id=1t_JczBffzwmDMHumalPQcoT5sTMYDN13")
      .container
        .row
          .col-sm
            P 【Q.#{Q_small}】
            p
              button(type="button" onclick="location.href='./1st'") １章 プログラミング体験をしてみよう
            p
              button(type="button" onclick="location.href='./2nd'") ２章 準備しよう
            p
              button(type="button" onclick="location.href='./3rd'") ３章 サーバーサイドプログラミング入門
            p
              button(type="button" onclick="location.href='./4th'") ４章 実践サーバーサイドプログラミング
            p
              button(type="button" onclick="location.href='./0'") ０章　入門コースをはじめる方へ
        
        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
        crossorigin="anonymous")